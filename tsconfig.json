{
  "compileOnSave": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2018",
    "module": "esnext",
    "sourceMap": false,
    "outDir": "./dist",
    "removeComments": true,
    "isolatedModules": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationMap": true,
  },
  "exclude": [
    "node_modules/*"
  ],
  "include": [
    "packages/*"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}